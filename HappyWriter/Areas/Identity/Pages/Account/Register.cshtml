@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="container register-form">
    <div class="form">
        <div class="note">
            <p>Register Form</p>
        </div>
        <div class="form-content">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input asp-for="Input.Vorname" tabindex="1" class="form-control" placeholder="Vorname *" />
                            <span asp-validation-for="Input.Vorname" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Input.Email" tabindex="3" class="form-control" placeholder="Email *" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input asp-for="Input.Name" tabindex="2" class="form-control" placeholder="Name *" />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Input.Strasse" tabindex="4" class="form-control" placeholder="Strasse *" />
                            <span asp-validation-for="Input.Strasse" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input asp-for="Input.Postleitzahl" tabindex="5" class="form-control" placeholder="Postleitzahl *" />
                            <span asp-validation-for="Input.Postleitzahl" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Input.Password" tabindex="7" class="form-control" placeholder="Password *" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input asp-for="Input.Wohnort" tabindex="6" class="form-control" placeholder="Wohnort *" />
                            <span asp-validation-for="Input.Wohnort" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Input.ConfirmPassword" tabindex="8" class="form-control" placeholder="Confirm Password *" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btnSubmit">Submit</button>
            </form>
        </div>
    </div>
</div>


<style>
    .note {
        text-align: center;
        height: 80px;
        background: -webkit-linear-gradient(left, #0072ff, #8811c5);
        color: #fff;
        font-weight: bold;
        line-height: 80px;
    }

    .form-content {
        padding: 5%;
        border: 1px solid #ced4da;
        margin-bottom: 2%;
    }

    .form-control {
        border-radius: 1.5rem;
    }

    .btnSubmit {
        border: none;
        border-radius: 1.5rem;
        padding: 1%;
        width: 20%;
        cursor: pointer;
        background: #0062cc;
        color: #fff;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
